# Dockerfile.dev для Next.js фронтенда
FROM node:20-alpine

# Установка рабочей директории
WORKDIR /app

# Копирование package.json и package-lock.json
COPY package*.json ./

# Установка зависимостей (пропускаем установку браузеров Playwright в Docker)
ENV PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1
RUN npm ci --ignore-scripts || npm ci

# Копирование исходного кода
COPY . .

# Открытие порта
EXPOSE 3000

# Команда запуска в режиме разработки с доступом из сети
CMD ["npm", "run", "dev:network"]
